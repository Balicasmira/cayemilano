    color: #8B7355;
  }

  /* Summary row */
  .rr__summary {
    display: grid;
    grid-template-columns: auto 1fr;
    gap: 60px;
    align-items: center;
    margin-bottom: 50px;
    background: #F5F0E8;
    border-radius: 20px;
    padding: 36px 40px;
  }

  .rr__rating-big {
    text-align: center;
    min-width: 140px;
  }

  .rr__rating-number {
