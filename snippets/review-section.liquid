  .rr__section {
    padding: 80px 60px;
    background: #EDE7D9;
    font-family: 'Jost', 'DM Sans', sans-serif;
  }

  .rr__inner {
    max-width: 1200px;
    margin: 0 auto;
  }

  /* Header */
  .rr__header {
    text-align: center;
    margin-bottom: 40px;
  }

  .rr__label {
    font-size: 11px;
    letter-spacing: 4px;
    text-transform: uppercase;
    color: #8B7355;
    margin-bottom: 12px;
    display: block;
  }

  .rr__title {
    font-family: 'Playfair Display', 'Georgia', serif;
    font-size: clamp(24px, 3vw, 36px);
    font-weight: 400;
    color: #1A1610;
    line-height: 1.2;
  }

  .rr__title em {
    font-style: italic;
    color: #8B7355;
  }

  /* Summary row */
  .rr__summary {
    display: grid;
    grid-template-columns: auto 1fr;
    gap: 60px;
    align-items: center;
    margin-bottom: 50px;
    background: #F5F0E8;
    border-radius: 20px;
    padding: 36px 40px;
  }

  .rr__rating-big {
    text-align: center;
    min-width: 140px;
  }

  .rr__rating-number {
    font-family: 'Playfair Display', Georgia, serif;
    font-size: 72px;
    font-weight: 400;
    color: #1A1610;
    line-height: 1;
    display: block;
  }

  .rr__stars-big {
    font-size: 22px;
    color: #E8A24A;
    letter-spacing: 3px;
    margin: 8px 0 6px;
    display: block;
  }

  .rr__total {
    font-size: 13px;
    color: #6B5E48;
    display: block;
  }

  .rr__bars { flex: 1; }

  .rr__bar-row {
    display: flex;
    align-items: center;
    gap: 12px;
    margin-bottom: 9px;
  }

  .rr__bar-row:last-child { margin-bottom: 0; }

  .rr__bar-label {
    font-size: 13px;
    color: #6B5E48;
    width: 36px;
    flex-shrink: 0;
  }

  .rr__bar-track {
    flex: 1;
    height: 8px;
    background: #D4C4A0;
    border-radius: 4px;
    overflow: hidden;
  }

  .rr__bar-fill {
    height: 100%;
    background: #1A1610;
    border-radius: 4px;
  }

  .rr__bar-count {
    font-size: 13px;
    color: #6B5E48;
    width: 28px;
    text-align: right;
    flex-shrink: 0;
  }

  /* â”€â”€ GRID â”€â”€ */
  .rr__grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 16px;
    margin-bottom: 40px;
  }

  /* â”€â”€ CARD â”€â”€ */
  .rr__card {
    background: #fff;
    border-radius: 16px;
    border: 1.5px solid #E8D9C0;
    overflow: hidden;
    display: flex;
    flex-direction: column;
    transition: box-shadow 0.2s ease;
  }

  .rr__card:hover {
    box-shadow: 0 8px 24px rgba(0,0,0,0.08);
  }

  /* Photo */
  .rr__photo {
    width: 100%;
    aspect-ratio: 1 / 1;
    object-fit: cover;
    display: block;
    background: #F5F0E8;
  }

  /* Card body */
  .rr__body {
    padding: 14px 16px 16px;
    display: flex;
    flex-direction: column;
    gap: 6px;
    flex: 1;
  }

  /* Name row */
  .rr__name-row {
    display: flex;
    align-items: center;
    gap: 6px;
    flex-wrap: wrap;
  }

  .rr__name {
    font-size: 14px;
    font-weight: 700;
    color: #1A1610;
  }

  .rr__verified {
    font-size: 10px;
    font-weight: 600;
    color: #2D6A4F;
    background: rgba(45,106,79,0.1);
    padding: 2px 7px;
    border-radius: 20px;
    display: inline-flex;
    align-items: center;
    gap: 3px;
  }

  .rr__meta {
    font-size: 11px;
    color: #8B7355;
    display: block;
  }

  /* Stars */
  .rr__stars {
    color: #E8A24A;
    font-size: 14px;
    letter-spacing: 2px;
    display: block;
  }

  /* Title */
  .rr__review-title {
    font-size: 13px;
    font-weight: 600;
    color: #1A1610;
    line-height: 1.4;
    display: block;
  }

  /* Text */
  .rr__text {
    font-size: 12px;
    line-height: 1.65;
    color: #6B5E48;
    margin: 0;
  }

  /* Date */
  .rr__date {
    font-size: 11px;
    color: #B0A08A;
    margin-top: auto;
    padding-top: 6px;
    display: block;
  }

  /* Load more */
  .rr__load-more {
    text-align: center;
  }

  .rr__btn-more {
    padding: 14px 44px;
    border: 2px solid #1A1610;
    background: transparent;
    color: #1A1610;
    font-family: inherit;
    font-size: 13px;
    font-weight: 600;
    letter-spacing: 2px;
    text-transform: uppercase;
    border-radius: 30px;
    cursor: pointer;
    transition: all 0.3s ease;
  }

  .rr__btn-more:hover {
    background: #1A1610;
    color: #F5F0E8;
  }

  .rr__card.rr__hidden { display: none; }

  /* â”€â”€ RESPONSIVE â”€â”€ */
  @media (max-width: 1024px) {
    .rr__grid { grid-template-columns: repeat(2, 1fr); }
    .rr__summary { grid-template-columns: 1fr; gap: 30px; }
  }

  @media (max-width: 640px) {
    .rr__section { padding: 40px 16px; }
    .rr__grid { grid-template-columns: repeat(2, 1fr); gap: 10px; }
    .rr__summary { padding: 24px 16px; }
    .rr__rating-number { font-size: 56px; }
